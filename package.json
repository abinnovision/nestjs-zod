{
	"name": "@abinnovision/nestjs-zod",
	"version": "0.0.0-set-by-ci",
	"description": "All NestJS + Zod utilities you need",
	"repository": {
		"url": "https://github.com/abinnovision/nestjs-zod"
	},
	"license": "MIT",
	"author": {
		"name": "AB INNOVISION GmbH",
		"email": "info@abinnovision.com",
		"url": "https://abinnovision.com/"
	},
	"sideEffects": false,
	"exports": {
		".": "./dist/index.js",
		"./z": {
			"import": "./dist/z.mjs",
			"default": "./dist/z.js"
		},
		"./frontend": {
			"import": "./dist/frontend.mjs",
			"default": "./dist/frontend.js"
		},
		"./dto": {
			"import": "./dist/dto.mjs",
			"default": "./dist/dto.js"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"z.d.ts",
		"frontend.d.ts",
		"dto.d.ts"
	],
	"scripts": {
		"build": "rollup -c",
		"check": "yarn lint:check && yarn format:check && yarn sort:check",
		"dev": "vite",
		"fix": "yarn lint:fix && yarn format:fix && yarn sort:fix",
		"format:check": "prettier --check 'src/**/*.{ts,js}' '**/*.{md,json,json5,yaml,yml}'",
		"format:fix": "prettier --write 'src/**/*.{ts,js}' '**/*.{md,json,json5,yaml,yml}'",
		"postinstall": "husky",
		"lint:check": "eslint 'src/**/*.{ts,js}'",
		"lint:fix": "eslint --fix 'src/**/*.{ts,js}'",
		"sort:check": "sort-package-json 'package.json' --check",
		"sort:fix": "sort-package-json 'package.json'",
		"test": "jest"
	},
	"commitlint": {
		"extends": [
			"@abinnovision/commitlint-config"
		]
	},
	"lint-staged": {
		"src/**/*.{ts,js}": [
			"prettier --write",
			"eslint --fix"
		],
		"{**/*,*}.{md,json,json5,yaml,yml}": [
			"prettier --write"
		],
		"package.json": [
			"sort-package-json"
		]
	},
	"prettier": "@abinnovision/prettier-config",
	"dependencies": {
		"merge-deep": "^3.0.3"
	},
	"devDependencies": {
		"@abinnovision/commitlint-config": "^2.2.0",
		"@abinnovision/eslint-config-base": "^2.1.0",
		"@abinnovision/eslint-config-typescript": "^2.1.0",
		"@abinnovision/prettier-config": "^2.1.0",
		"@commitlint/cli": "^19.3.0",
		"@golevelup/ts-jest": "^0.5.0",
		"@nestjs/common": "8.0.0",
		"@nestjs/core": "8.0.0",
		"@nestjs/swagger": "^5.2.1",
		"@types/jest": "^26.0.24",
		"@types/merge-deep": "^3.0.3",
		"@types/node": "^20.11.30",
		"@types/prettier": "^3.0.0",
		"esbuild": "^0.23.0",
		"eslint": "^9.8.0",
		"globals": "^15.9.0",
		"husky": "^9.1.4",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.8",
		"prettier": "^3.3.3",
		"reflect-metadata": "^0.1.14",
		"rollup": "^2.69.0",
		"rollup-plugin-bundle-size": "^1.0.3",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-dts": "^4.1.0",
		"rollup-plugin-esbuild": "^4.8.2",
		"rollup-plugin-terser": "^7.0.2",
		"rxjs": "^7.8.1",
		"sort-package-json": "^2.10.0",
		"ts-jest": "^29.2.4",
		"typescript": "4.9.5",
		"zod": "3.21.4"
	},
	"peerDependencies": {
		"@nestjs/common": ">= 8.0.0",
		"@nestjs/core": ">= 8.0.0",
		"@nestjs/swagger": ">= 5.0.0",
		"zod": ">= 3.14.3"
	},
	"peerDependenciesMeta": {
		"@nestjs/common": {
			"optional": true
		},
		"@nestjs/core": {
			"optional": true
		},
		"@nestjs/swagger": {
			"optional": true
		},
		"zod": {
			"optional": false
		}
	},
	"packageManager": "yarn@4.4.0",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
